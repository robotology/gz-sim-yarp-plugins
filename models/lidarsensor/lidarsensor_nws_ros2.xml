<devices>
    <device name="laser_nws_ros2" type="rangefinder2D_nws_ros2">
        <param name="period"> 0.033333 </param>
        <param name="namespace">    ${portprefixnoslash}    </param>
        <param name="node_name">    rangefinder_ros2_node    </param>
        <param name="topic_name">   ${portprefix}/laser_sensor  </param>
        <param name="frame_id">     ${portprefixnoslash}/laser_tur   </param>
        <action phase="startup" level="5" type="attach">
            <param name="device"> laser_plugin_device </param>
        </action>
        <action phase="shutdown" level="5" type="detach" />
    </device>
</devices>
